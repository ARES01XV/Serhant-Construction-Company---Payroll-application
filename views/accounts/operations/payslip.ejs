<!-- @format -->

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= title %> </title>
		<!-- links------------------------------ -->
		<link rel="stylesheet" href="/public/styles.css" />
		<script
			src="https://kit.fontawesome.com/b7a2ac83f3.js"
			crossorigin="anonymous"
		></script>
	</head>
	<body>
		<div class="page_container">
			<!-- Side panel-------------------------------------------- -->
			<aside>
				<!-- Logo-------------------------------------------- -->
				<div class="aside_logo">
					<img
						src="https://cdn.discordapp.com/attachments/882362353507778613/991768839442411610/Untitled-1-01-removebg-preview_1.png"
						alt="logo"
					/>
					<h1>SCC</h1>
				</div>
				<br /><br />

				<!-- Search-------------------------------------------- -->
				<div class="search">
					<select name="search" id="search">
						<option value="" hidden>Search by month</option>
						<option value="january">January</option>
						<option value="february">February</option>
						<option value="march">March</option>
						<option value="april">April</option>
						<option value="may">May</option>
						<option value="june">June</option>
						<option value="july">July</option>
						<option value="august">August</option>
						<option value="september">September</option>
						<option value="october">October</option>
						<option value="november">November</option>
						<option value="december">December</option>
					</select>
					<button type="submit">Search</button>
				</div>
				<br /><br />

				<!-- Departments-------------------------------------------- -->
				<div class="departments">
					<h3>Departments &#9661;</h3><br />
					<a href="accounts/operations/operations">Operations</a><br /><br />
					<a href="accounts/sales/sales">Sales & Marketing</a><br /><br />
					<a href="accounts/administration/administration">Administration</a
					><br /><br />
					<a href="accounts/accounts/accounts">Accounts</a>
				</div>
				<br /><br /><br /><br /><br /><br /><br />

				<!-- Logout-------------------------------------------- -->
				<div class="logout">
					<img src="<%= acc_session.employee_pic %>" alt="" />
					<br />
					<a href="#">logout</a>
				</div>
			</aside>

			<!-- Accounts Content-------------------------------------------- -->
			<div class="content">
				<form action="" method="get">
					<h2>Employee Payslip</h2>
					<br /><br />
					<div>
						<label for="frst_nm">Employee Name</label><br />
						<input
							disabled
							type="text"
							name="frst_nm"
							id="frst_nm"
							value="<%= op_pay.frst_nm %> <%= op_pay.last_nm %>"
						/>
					</div>
					<br />
					<div>
						<label for="frst_nm">Department</label><br />
						<input
							disabled
							type="text"
							name="department_nm"
							id="department_nm"
							value="<%= op_pay.department_nm %>"
						/>
					</div>
					<br />
					<div>
						<label for="cycle_hrs">Cycle Hours</label><br />
						<input
							disabled	
							type="number"
							name="cycle_hrs"
							id="cycle_hrs"
							value="<%= op_pay.cycle_hrs %>"
						/>
					</div>
					<br />
					<div>
						<label for="month_pay">Cycle Pay</label><br />
						<input
							disabled
							type="number"
							name="month_pay"
							id="month_pay"
							value="<%= op_pay.cycle_pay %>"
						/>
					</div>
				</form>
			</div>
		</div>
	</body>
</html>
